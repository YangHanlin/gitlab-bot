{
  "name": "gitlab-bot",
  "version": "1.0.0",
  "description": "Simple GitLab bot to automate team workflows",
  "private": true,
  "egg": {
    "declarations": true
  },
  "dependencies": {
    "@gitbeaker/node": "^28.0.1",
    "egg": "^2.15.1",
    "egg-scripts": "^2.11.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "egg-bin": "^4.11.0",
    "egg-ci": "^1.11.0",
    "egg-mock": "^3.21.0",
    "eslint": "^5.13.0",
    "eslint-config-egg": "^7.1.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "start": "egg-scripts start --title=egg-server-gitlab-bot",
    "start-daemon": "egg-scripts start --daemon --title=egg-server-gitlab-bot",
    "stop": "egg-scripts stop --title=egg-server-gitlab-bot",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test": "yarn lint --fix && yarn test-local",
    "test-local": "egg-bin test",
    "cov": "egg-bin cov",
    "lint": "eslint .",
    "ci": "yarn lint && yarn cov",
    "autod": "autod"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "yarn lint --fix"
  },
  "ci": {
    "version": "10"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Yang Hanlin",
  "license": "MIT"
}
